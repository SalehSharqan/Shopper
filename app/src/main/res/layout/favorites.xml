<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_marginBottom="60dp"

    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relast"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativemiddle">

        <LinearLayout
            android:id="@+id/linpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/category_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:text="Favorite Products"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


             <ImageView
                 android:id="@+id/eye"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="180dp"
                 android:src="@drawable/eye"
                 android:clickable="true"
                 android:focusable="true"/>

        </LinearLayout>


        <View
            android:layout_height="1dp"
            android:background="@color/purple"
            android:layout_width="match_parent"
            android:layout_below="@+id/linpro"
            android:id="@+id/line_below_category"
            android:layout_marginTop="5dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linpro"
            android:id="@+id/item_review_recycleview"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relast1"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativemiddle">

        <LinearLayout
            android:id="@+id/linshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_lable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="Favorite Shops"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/eye1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="206dp"
                android:src="@drawable/eye"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>


        <View android:layout_height="1dp"
            android:background="@color/purple"
            android:layout_width="match_parent"
            android:layout_below="@+id/linshop"
            android:id="@+id/line_below_category1"
            android:layout_marginTop="5dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_below_category1"
            android:id="@+id/item_review_recycleview1"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>



</LinearLayout>