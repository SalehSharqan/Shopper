<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        android:background="@color/purple"
        app:view_borderColor="@color/purple"
        app:view_borderWidth="3dp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Hosam Azzam"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/menu_home"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|start"
        android:layout_gravity="center_horizontal"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_cat"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|start"
        android:text="East Coast Mall"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_hot"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"

        android:gravity="center|start"
        android:text="Photo Search"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/menu_cart"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"

        android:gravity="center|start"
        android:text="Favorites"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/menu_his"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|start"
        android:text="Receipts"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|start"
        android:text="Notes"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|start"
        android:text="Barcode Scanner"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/menu_about"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_about"
        android:drawableStart="@drawable/ic_action_about"
        android:gravity="center|start"
        android:text=" About"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_logout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_logout"
        android:drawableStart="@drawable/ic_action_logout"
        android:gravity="center|start"
        android:text=" Log out"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>