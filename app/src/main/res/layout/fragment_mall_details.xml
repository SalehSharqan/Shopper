<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_marginBottom="60dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="245dp"
            android:layout_gravity="center_horizontal"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/Mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:padding="12dip"
                android:elevation="30dp"
                android:text="mallname"
                android:textSize="20dp"
                android:textColor="#ffffffff" />
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Title"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <androidx.cardview.widget.CardView
                android:id="@+id/shops"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/purple"
                app:cardCornerRadius="10dp"
                android:layout_toRightOf="@+id/about"
                android:layout_marginLeft="40dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SHOPS"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/line_below_title"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/about"
                android:background="@color/colorAccent" />


            <TextView
                android:id="@+id/aboutmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_below_title"
                android:layout_alignStart="@+id/about"
                android:layout_alignLeft="@+id/about"
                android:paddingTop="18dp"
                android:text="Dscription"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />



        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/r1"
            android:layout_marginTop="15dp"
            android:background="#FAFAFA" />

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/prates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Parking Rates"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <View
                android:id="@+id/line_below_title1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/prates"
                android:background="@color/colorAccent" />


            <TextView
                android:id="@+id/rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_below_title1"
                android:layout_alignStart="@+id/prates"
                android:layout_alignLeft="@+id/prates"
                android:paddingTop="18dp"
                android:text="Dscription"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/r2"
            android:layout_marginTop="15dp"
            android:background="#FAFAFA"  />

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ntiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Timing"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <View
                android:id="@+id/line_below_title2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ntiming"
                android:background="@color/colorAccent" />


            <TextView
                android:id="@+id/timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_below_title2"
                android:layout_alignStart="@+id/ntiming"
                android:layout_alignLeft="@+id/ntiming"
                android:paddingTop="18dp"
                android:text="Dscription"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/r3"
            android:layout_marginTop="15dp"
            android:background="#FAFAFA"  />



        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ffacilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Facilities"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <View
                android:id="@+id/line_below_title3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ffacilities"
                android:background="@color/colorAccent" />


            <TextView
                android:id="@+id/facilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_below_title3"
                android:layout_alignStart="@+id/ffacilities"
                android:layout_alignLeft="@+id/ffacilities"
                android:paddingTop="18dp"
                android:text="Dscription"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />



        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/r4"
            android:layout_marginTop="15dp"
            android:background="#FAFAFA"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/ddir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:text="Directions"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />





                <ImageView
                    android:id="@+id/map"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/ddir"
                    android:layout_marginLeft="55dp"
                    android:src="@drawable/mao5" />

                <ImageView
                    android:id="@+id/uber"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/ddir"
                    android:layout_toRightOf="@+id/map"

                    android:src="@drawable/uber"/>

                <ImageView
                    android:id="@+id/grab"
                    android:layout_width="100dp"
                    android:layout_below="@+id/ddir"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@+id/uber"
                    android:src="@drawable/grab2"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@+id/grab"
                android:layout_marginTop="15dp"
                android:background="#FAFAFA" />
        </RelativeLayout>






    </LinearLayout>

</androidx.core.widget.NestedScrollView>