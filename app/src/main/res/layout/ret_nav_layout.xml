<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        app:view_borderColor="@color/purple"
        app:view_borderWidth="3dp" />


    <TextView
        android:id="@+id/user_name_ret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Hosam Azzam"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/menu_home_ret"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_home"
        android:drawableStart="@drawable/ic_action_home"
        android:gravity="center|start"
        android:text=" Home"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/menu_about_ret"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_about"
        android:drawableStart="@drawable/ic_action_about"
        android:gravity="center|start"
        android:text=" About"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/menu_logout_ret"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_logout"
        android:drawableStart="@drawable/ic_action_logout"
        android:gravity="center|start"
        android:text=" Log out"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>