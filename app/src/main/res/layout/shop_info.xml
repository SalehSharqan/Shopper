        <View android:layout_height="12dp"
            android:background="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_below="@+id/item_size"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relast"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativemiddle">
            <TextView
                android:id="@+id/category_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comments"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                />

            <View android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_below="@+id/category_lable"
                android:id="@+id/line_below_category"
                android:layout_marginTop="5dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_lable"
                android:layout_marginTop="7dp" />

        </RelativeLayout>

        <View android:layout_height="12dp"
            android:background="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_below="@+id/relativemiddle"
            android:paddingTop="20dp"
            />



        <TextView
            android:id="@+id/textView588"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Give Feedback"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line_below_seller4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         >



            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:numStars="5"
                android:stepSize="1"
                android:layout_gravity="center"
                android:rating="3"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:id="@+id/can"
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="7dp"
                android:layout_alignParentLeft="true"

                >

                <EditText
                    android:id="@+id/content"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/edit_text_border"
                    android:gravity="center|start"
                    android:hint="This is Good!"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSend"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/purple"
                app:cardCornerRadius="10dp"
                android:layout_below="@+id/can"
                android:layout_marginLeft="17dp"
                android:foregroundGravity="center_vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SEND"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

